<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC6FBE0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/phone_ln">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="Đăng ký tài khoản"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:textColor="#FF5722"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:lines="2"
                android:text="Bạn cần nhập vào sosos điện thoại để đăng ký:"
                android:textAlignment="center"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bt_login"
                android:layout_marginHorizontal="30dp"
                android:hint="09***********"
                android:id="@+id/edt_phone_number"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btn_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_bt_login"
                android:backgroundTint="#00FF7D"
                android:text="Gửi" />
        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/verify_Ln">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginHorizontal="20dp"
               android:layout_marginTop="20dp"
               android:lines="2"
               android:text="Bạn cần nhập vào số điện thoại để đăng ký:"
               android:textAlignment="center"
               android:textSize="14sp" />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/custom_bt_login"
               android:layout_marginHorizontal="30dp"
               android:hint=""
               android:id="@+id/edt_opt"
               android:textAlignment="center"/>
           <Button
               android:id="@+id/btn_sent_otp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="50dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/custom_bt_login"
               android:backgroundTint="#00FF7D"
               android:text="Gửi" />
       </LinearLayout>
    </LinearLayout>
</layout>